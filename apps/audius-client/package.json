{
  "name": "root",
  "private": true,
  "scripts": {
    "link": "lerna link",
    "postinstall": "lerna bootstrap --no-ci && npm run build && npm run install-hooks && cd packages/mobile/ios && if command -v pod > /dev/null; then pod install; fi",
    "build": "lerna run build --scope=@audius/stems --scope=@audius/common",
    "install-hooks": "mookme init --only-hook --skip-types-selection",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "WEB========================================": "",
    "web:dev": "cd packages/web && npm run start:dev",
    "web:stage": "cd packages/web && npm run start:stage",
    "web:prod": "cd packages/web && npm run start:prod",
    "DESKTOP====================================": "",
    "desktop:dev": "cd packages/web; concurrently -k 'BROWSER=none npm run start:dev' 'wait-on http://localhost:3000 && npm run electron:localhost -- 3000'",
    "desktop:stage": "cd packages/web; concurrently -k 'BROWSER=none npm run start:stage' 'wait-on http://localhost:3001 && npm run electron:localhost -- 3001'",
    "desktop:prod": "cd packages/web; concurrently -k 'BROWSER=none npm run start:prod' 'wait-on http://localhost:3002 && npm run electron:localhost -- 3002'",
    "MOBILE=====================================": "",
    "clear-cache": "cd packages/mobile && watchman watch-del-all && npm run start --reset-cache",
    "ios:dev": "cd packages/mobile && npm run ios:dev --",
    "ios:stage": "cd packages/mobile && npm run ios:stage --",
    "ios:prod": "cd packages/mobile && npm run ios:prod --",
    "android:dev": "cd packages/mobile && npm run android:dev",
    "android:stage": "cd packages/mobile && npm run android:stage",
    "android:prod": "cd packages/mobile && npm run android:prod",
    "COMMON=====================================": "",
    "common": "cd packages/common && npm run start",
    "STEMS======================================": "",
    "stems": "cd packages/stems && npm run start"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "concurrently": "7.4.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-prettier-standard": "4.0.1",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.0.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-standard": "4.1.0",
    "lerna": "5.1.8",
    "prettier": "2.7.1",
    "prettier-config-standard": "5.0.0",
    "standard": "16.0.3",
    "typescript": "4.7.4",
    "wait-on": "6.0.1"
  },
  "dependencies": {
    "@escape.tech/mookme": "2.1.1"
  }
}
