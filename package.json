{
  "name": "root",
  "private": true,
  "scripts": {
    "link": "lerna link",
    "preinstall": "./scripts/preinstall.sh",
    "postinstall": "./scripts/postinstall.sh",
    "build": "lerna run build --scope=@audius/stems --scope=@audius/common",
    "install-hooks": "mookme init --only-hook --skip-types-selection",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "clean": "rm -rf packages/web/build* && cd packages/mobile && npm run clean:auto && cd ../..",
    "clean:modules": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "WEB========================================": "",
    "web:dev": "cd packages/web && npm run start:dev",
    "web:stage": "cd packages/web && npm run start:stage",
    "web:prod": "cd packages/web && npm run start:prod",
    "DESKTOP====================================": "",
    "desktop:dev": "cd packages/web; concurrently -k 'BROWSER=none npm run start:dev' 'wait-on http://localhost:3000 && npm run electron:localhost -- 3000'",
    "desktop:stage": "cd packages/web; concurrently -k 'BROWSER=none npm run start:stage' 'wait-on http://localhost:3001 && npm run electron:localhost -- 3001'",
    "desktop:prod": "cd packages/web; concurrently -k 'BROWSER=none npm run start:prod' 'wait-on http://localhost:3002 && npm run electron:localhost -- 3002'",
    "MOBILE=====================================": "",
    "clear-cache": "cd packages/mobile && watchman watch-del-all && npm run start --reset-cache",
    "ios:dev": "cd packages/mobile && npm run ios:dev --",
    "ios:stage": "cd packages/mobile && npm run ios:stage --",
    "ios:prod": "cd packages/mobile && npm run ios:prod --",
    "android:dev": "cd packages/mobile && npm run android:dev",
    "android:stage": "cd packages/mobile && npm run android:stage",
    "android:prod": "cd packages/mobile && npm run android:prod",
    "COMMON=====================================": "",
    "common": "cd packages/common && npm run start",
    "STEMS======================================": "",
    "stems": "cd packages/stems && npm run start",
    "SDK========================================": "",
    "sdk:update": "lerna exec -- npm-check-updates @audius/sdk -u --target @beta && rm -rf packages/*/node_modules/@audius/sdk && npm i",
    "sdk:update-hotfix": "lerna exec -- npm-check-updates @audius/sdk -u --target @hotfix && rm -rf packages/*/node_modules/@audius/sdk && npm i",
    "sdk:link": "./scripts/link-sdk.sh",
    "verify": "lerna run --scope=audius-client --scope audius-mobile-client verify"
  },
  "devDependencies": {
    "@types/keyv": "4.2.0",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "concurrently": "7.4.0",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-prettier-standard": "4.0.1",
    "eslint-config-standard": "17.0.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-typescript": "3.5.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.0",
    "eslint-plugin-react": "7.31.10",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-standard": "4.1.0",
    "lerna": "6.0.1",
    "npm-check-updates": "16.4.1",
    "npm-force-resolutions": "0.0.10",
    "prettier": "2.7.1",
    "prettier-config-standard": "5.0.0",
    "standard": "17.0.0",
    "typescript": "4.9.4",
    "wait-on": "6.0.1"
  },
  "dependencies": {
    "@escape.tech/mookme": "2.2.0"
  }
}
